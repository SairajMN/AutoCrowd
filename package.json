{
    "name": "autocrowd-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "backend",
        "contracts"
    ],
    "scripts": {
        "build": "turbo build",
        "build:frontend": "turbo build --filter=frontend",
        "build:backend": "turbo build --filter=backend",
        "build:contracts": "turbo build --filter=contracts",
        "dev": "turbo dev",
        "dev:frontend": "turbo dev --filter=frontend",
        "dev:backend": "turbo dev --filter=backend",
        "test": "turbo test",
        "deploy:contracts": "turbo deploy:contracts",
        "lint": "turbo lint",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@openzeppelin/contracts": "^5.4.0",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "eslint": "^8.50.0",
        "pino-pretty": "^13.1.2",
        "prettier": "^3.1.0",
        "turbo": "^1.12.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@ballerine/web-sdk": "^1.3.2",
        "@modelcontextprotocol/sdk": "^1.20.1",
        "@supabase/supabase-js": "^2.76.1"
    }
}
