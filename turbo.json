{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "lint": {
            "dependsOn": []
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "deploy:contracts": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        }
    },
    "globalDependencies": [
        "package.json",
        "tsconfig.json",
        ".env*"
    ]
}