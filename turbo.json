{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": []
        },
        "build:frontend": {
            "dependsOn": []
        },
        "build:backend": {
            "dependsOn": []
        },
        "lint": {},
        "test": {
            "dependsOn": [
                "^build"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "deploy:contracts": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        },
        "start:backend": {
            "cache": false,
            "persistent": true
        },
        "dev:backend": {
            "cache": false,
            "persistent": true
        }
    }
}