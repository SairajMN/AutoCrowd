{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**",
                "tsconfig.json",
                "package.json",
                "*.config.**"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**",
                "build/**"
            ]
        },
        "lint": {},
        "test": {
            "dependsOn": [
                "^build"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "deploy:contracts": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        },
        "start:backend": {
            "cache": false,
            "persistent": true
        },
        "dev:backend": {
            "cache": false,
            "persistent": true
        }
    }
}